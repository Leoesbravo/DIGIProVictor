@{
    ViewData["Title"] = "SelectAlumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Alumnos</h2>
            <hr />
        </div>
    </div>
</div>
<br />

<div class="container">
    <div class="row">
        <div class="col-md-10">
        </div>
        <div class="col-md-1" style="padding-left:100px">
            <button type="button" class="btn btn-success" id="btnAdd" onclick="Modal()">Agregar</button>
        </div>
    </div>
    <br/>

   <div class="slide-container" id="Alumnos">
        <div class="wrapper">
            <div class="clash-card giant">
                <div class="clash-card__image clash-card__image--giant">
                    <img src="/imagess/usuario-icono.png" alt="giant" />
                </div>
                <div class="clash-card__level clash-card__level--giant" >1</div>
                <div class="clash-card__unit-name">Jesús Torres Torres</div>
                <div class="clash-card__unit-stats clash-card__unit-stats--giant clearfix">
                    <div class="one-third">
                    <button class="btn btn-primary" onclick="GetById('')"> Editar </button>
                    </div>
                    <div class="one-third">
                        <button class="btn btn-primary" onclick="Eliminar('')"> Eliminar </button>
                    </div>
                </div>
            </div>
        </div>
   </div>
</div>


<div class="modal fade" id="ModalUpdate" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Alumno</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtIdAlumno" placeholder="IdAlumno" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label class="Nombre">Nombre:</label>
                        <input type="text" class="form-control" id="txtNombre" />
                    </div>
                    <div class="form-group">
                        <label class="AP">ApellidoPaterno:</label>
                        <input type="text" class="form-control" id="txtApellidoP" />
                    </div>
                    <div class="form-group">
                        <label class="AM">Apellido Materno:</label>
                        <input type="text" class="form-control" id="txtApellidoM" />
                    </div>
                    <div class="form-group">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1"><i class="bi bi-card-image"></i></span>
                        <input id="Imagen" type='file' class="form-control" name="Imagen" onchange="validateFile(this), readURL(this);  " />                       
                    </div>
                        <img id="ImgPrevia" src="~/Imagenes/SinUsuario.png" style="width:250px ; height:250px" />
                     </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnGuardar" onclick="Guardar()">Agregar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-5">

            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Detalle</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <h5>
                                Acción completada con éxito
                            </h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" value="Regresar" data-dismiss="modal">Entendido</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/Alumno.js"></script>


